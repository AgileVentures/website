<section id="projects">
  <h1>Listing documents</h1>

  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th style="width:100px">Title</th>
      <th>Body</th>
      <th style="width:100px">Created</th>
      <th style="width:10px">Public</th>
      <th></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @documents.each do |document| %>
        <tr>
          <td><%= document.title %></td>
          <td><%= document.body %></td>
          <td><%= document.public %></td>
          <td><%= link_to 'Show', document   %></td>
          <td><%= link_to 'Edit', edit_project_document_path(@project, document) %></td>
          <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>
</section>