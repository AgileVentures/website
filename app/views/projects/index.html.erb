<section id="projects">
<h1>Listing projects</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th style="width:150px"><strong>Title</strong></th>
      <th style="width:250px">Body</th>
      <th style="width:100px">Created</th>
      <th style="width:10px">Public</th>
      <th style="width:15px"></th>
      <th style="width:15px"></th>
      <th style="width:15px"></th>
      <th style="width:15px"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.body %></td>
        <td><%= project.created %></td>
        <td><%= project.public %></td>
        <td><%= link_to 'Show', project, :type => "button", :class => 'btn btn-success btn-xs' %> </td>
        <td><%= link_to 'Docs', project_documents_path(project.id), :type => "button", :class => 'btn btn-success btn-xs' %></td>
        <td><%= link_to 'Edit', edit_project_path(project), :type => "button", :class => 'btn btn-success btn-xs' %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, :type => "button", :class => 'btn btn-success btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Project', new_project_path, :type => "button", :class => 'btn btn-primary' %>
 <% end %>
</section>