<ul class="nav navbar-nav navbar-right">
  <% unless user_signed_in?%>
      <li class="dropdown " id="menuLogin">
        <a class="dropdown-toggle" href="#" data-toggle="dropdown" id="navLogin">Login</a>
        <div class="dropdown-menu col-md-2" id="login" style="padding:20px 20px 20px 10px; width: 300px;">
          <%= form_for(resource, :class => "collapse", :html => { :id => "loginForm" }, :as => resource_name, :url => session_path(resource_name)) do |f| %>
              <div>
                <label>Login:</label>
                <!--[if lt IE 9]>
                <label for="user_email">Enter email</label>
                <![endif]-->
                <%= f.email_field :email, :autofocus => true, :class => "form-control input-sm", :placeholder => "you@example.com" %>
              </div>
              <div>
                <!--[if lt IE 9]>
                <label for="user_password">Enter password</label>
                <![endif]-->
                <%= f.password_field :password, :class => "form-control input-sm", :placeholder => "password" %>
              </div>
              <% if devise_mapping.rememberable? -%>
                  <div><%= f.check_box :remember_me %> <%= f.label :remember_me, :style => "display: inline;" %></div>
              <% end -%>

              <div style = "display: inline;"><%= f.submit "Sign in", :id => 'signin', :class => "btn btn-primary btn-xs" %></div>

              <%= link_to "Forgot your password?", new_password_path(resource_name) %>
          <% end %>
          <form><a href="#" title="Click this link to Sign Up for an account" id="toggle_link">Not registred? Sign-up..</a></form>
          <div id="register">

            <%= form_for(resource, :class => "collapse", :html => { :id => "registerForm" }, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>

                <!--[if lt IE 9]>
                <label for="user_password">Enter email</label>
                <![endif]-->
                <%= f.email_field :email, :autofocus => true, :class => "form-control input-sm", :id => 'signup_email', :name => 'user[email]', :placeholder => "you@example.com" %>
                <!--[if lt IE 9]>
                <label for="user_password">Enter password</label>
                <![endif]-->
                <%= f.password_field :password, :class => "form-control input-sm", :id => 'signup_password', :name => 'user[password]', :placeholder => "password" %>
                <!--[if lt IE 9]>
                <label for="user_password">Confirm password</label>
                <![endif]-->
                <%= f.password_field :password_confirmation, :class => "form-control input-sm", :id => 'signup_password_confirmation', :placeholder => 'confirm password' %>

                <div><%= f.submit "Sign up", :id => 'signup', :class => "btn btn-primary btn-xs" %></div>
            <% end %>
          </div>
        </div>
      </li>
  <% else %>
      <li class="dropdown">
        <a href="#" id="<%= current_user.email %>" class="dropdown-toggle" data-toggle="dropdown" title="Some SEO stuff....">
          <i class="icon-user icon-xxlarge"> </i> <%= current_user.email %>
          <b class="caret"></b>
        </a>

        <ul class="dropdown-menu">
          <li><%= link_to 'Update account', edit_user_registration_path %></li>
          <li><%=link_to 'Log out', destroy_user_session_path, :method => :delete%></li>
  <% end %>
  </ul>
  </li>
</ul>

 <% content_for(:scripts) do %>
    <script>
        $(function() {
            $('#registerForm').collapse('hide');
        });
        $('a#toggle_link').on('click', function (e) {
            e.preventDefault();
            // Get all relevant elements
            var $link = $('a#toggle_link');
            var $collapse1 = $('#loginForm');
            var $collapse2 = $('#registerForm');
            // Toggle the collapse of the forms
            $collapse1.collapse('toggle');
            $collapse2.collapse('toggle');
            // Change the link text
            if ($link.text() == 'New organisation? Sign-up..') {
                $link.text('Already a member? Login');
            }
            else {
                $link.text('New organisation? Sign-up..');
            }
        });
    </script>
<% end %>
