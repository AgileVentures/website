<div class='row'>
  <div class='col-sm-6'>

    <%= form_for @subject, :html => { :class => 'form-vertical' } do |f| %>
        <%= render 'errors' %>
        <legend>Subject</legend>
        <div class='form-group'>
        <%= f.label 'name', 'Name' %>
        <%= f.text_field 'name', :class => 'form-control', placeholder: 'Name' %>
        </div>
          <div class='form-group'>
          <%= f.label 'description' %>
        <%= f.text_area 'description', :class => 'form-control',  'rows' => 10, placeholder: 'Description'%>
          </div>
            <div class='form-group'>
            <%= f.label 'group_url' %>
        <%= f.text_field 'group_url', :class => 'form-control', placeholder: 'Group url' %>
            </div>
        <div class='form-group'>
        <%= f.submit 'Submit', :class => 'btn btn-primary' %>
        </div>
    <% end %>
  </div>
</div>